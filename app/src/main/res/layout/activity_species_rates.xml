<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpeciesRatesActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgSpecie"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/mouse"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/txtRangos"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Numero de rangos"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edtRangos"
        app:layout_constraintTop_toBottomOf="@id/imgSpecie"

        />
    <EditText
        android:id="@+id/edtRangos"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="3"
        android:maxLength="1"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@id/txtRangos"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgSpecie"
         />
    <Button
        android:id="@+id/btnRangos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintTop_toBottomOf="@id/edtRangos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/txt1"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Primer rango"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/btnRangos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edtAgeRange1"
        />
    <EditText
        android:id="@+id/edtAgeRange1"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="Ingrese primer rango"
        android:maxLength="10"
        app:layout_constraintLeft_toRightOf="@id/txt1"
        app:layout_constraintTop_toBottomOf="@id/btnRangos"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/txt2"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Segundo rango"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/edtAgeRange1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edtAgeRange2"
        />
    <EditText
        android:id="@+id/edtAgeRange2"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="Ingrese segundo rango"
        android:maxLength="10"
        app:layout_constraintLeft_toRightOf="@id/txt1"
        app:layout_constraintTop_toBottomOf="@id/edtAgeRange1"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/txt3"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Tercer rango"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/edtAgeRange2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edtAgeRange3"
        />
    <EditText
        android:id="@+id/edtAgeRange3"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="Ingrese tercer rango"
        android:maxLength="10"
        app:layout_constraintLeft_toRightOf="@id/txt1"
        app:layout_constraintTop_toBottomOf="@id/edtAgeRange2"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/txt4"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Cuarto rango"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/edtAgeRange3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edtAgeRange4"
        />
    <EditText
        android:id="@+id/edtAgeRange4"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="Ingrese cuarto rango"
        android:maxLength="10"
        app:layout_constraintLeft_toRightOf="@id/txt1"
        app:layout_constraintTop_toBottomOf="@id/edtAgeRange3"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="40dp"
        android:text="Quinto rango"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/edtAgeRange4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edtAgeRange5"
        />
    <EditText
        android:id="@+id/edtAgeRange5"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="Ingrese quinto rango"
        android:maxLength="10"
        app:layout_constraintLeft_toRightOf="@id/txt1"
        app:layout_constraintTop_toBottomOf="@id/edtAgeRange4"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/edtAgeRange5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</android.support.constraint.ConstraintLayout>